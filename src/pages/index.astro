  <div class="flex overflow-hidden w-full h-screen justify-center items-center relative">
    <Image
      src="~/assets/images/photo_2024-02-22 19.30.30.jpeg"
      class="w-full h-full object-cover"
      alt=""
      loading="lazy"
      decoding="async"
    />
    <div class="absolute inset-0 z-1 flex bg-gradient-to-b from-transparent via-10% via-transparent to-black"></div>
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 text-center">
      <h1 class="text-5xl md:text-6xl font-bold leading-tighter tracking-tighter mb-4 text-white">
        Colony Construction Building Dreams
      </h1>
      <h2 class="font-bold leading-tighter tracking-tighter mb-4 text-white">
        Remodels, New Home Construction, any size jobs in Bisbee, Arizona,<br /> Cochise County and beyond
      </h2>
    </div>
  </div>

